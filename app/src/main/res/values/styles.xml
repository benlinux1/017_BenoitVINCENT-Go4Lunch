<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" >

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.MyApplication">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/colorSand</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="color">@color/white</item>
        <item name="boxBackgroundColor" tools:override="true">@color/white</item>
        <item name="boxStrokeColor" tools:override="true">@color/white</item>
        <item name="hintTextColor" tools:override="true">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

    </style>

    <!-- STYLE NAV DRAWER HEADER -->
    <style name="DrawerTheme" parent="Theme.MyApplication">
        <item name="colorPrimary">@color/red</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- STYLE HAMBURGER / BACK ARROW IN TOOLBAR -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="color">@android:color/white</item>
    </style>


    <!-- STYLE RATING BAR -->
    <style name="RatingBar" parent="Theme.MyApplication">
        <item name="colorControlNormal">@color/grey</item>
        <item name="color">@color/grey</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>


    <!-- STYLE SEARCH BAR -->
    <style name="SearchBar" parent="Theme.MyApplication">
        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="color">@color/grey</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>


    <!-- STYLE LIKE BUTTON -->
    <style name="LikeButtonStyle" parent="Theme.MyApplication">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>


    <style name="SwitchStyle" parent="Theme.MyApplication">
        !-- Text cursor color when search view is active -->
        <item name="colorControlActivated">@color/colorGreenSwitch</item>
    </style>

</resources>